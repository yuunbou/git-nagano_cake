<div class="container">
  <div class="row m-5">
    <h4 class="col-lg-2 bg-light text-center">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.get_image(250,300) %>
    </div>
    <div class="col-lg-6">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @genre.name %></td>
        </tr>
        <tr>
          <th>
            税込価格</br>
            (税抜価格)
          </th>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if @item.is_active == true %>
            <td class="h5 text-success font-weight-bold">販売中</td>
          <% else %>
            <td class="h5 text-success font-weight-bold">販売停止中</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success col-lg-2 p-3" %>
  </div>
</div>
