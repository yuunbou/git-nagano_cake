<div class="container">
  <div class="row m-3">
    <div class="col-lg-2 ml-4">
      <h3 class="bg-light text-center">商品一覧</h3>
    </div>
    <div class="col-lg-9 text-right ml-5">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-light h3 rounded-circle  p-0" style="width:2rem;height:2rem;">+</button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="col-lg-11 mx-auto">
      <thead>
        <tr class="bg-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="py-3">
              <%= item.id %>
            </td>
            <td class="py-3">
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td class="py-3">
              <%= item.price.to_s(:delimited) %>
            </td>
            <td class="py-3">
              <%= item.genre.name %>
            </td>
            <% if item.is_active == true %>
              <td class="text-success font-weight-bold py-3">販売中</td>
            <% else %>
              <td class="text-secondary font-weight-bold py-3">販売停止中</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
