<div class="container">
  <div class="row m-3">
    <h3 class="col-lg-2 offset-1 bg-light text-center">注文履歴一覧</h2>
  </div>
  <div class="row mx-auto">
    <table class="table justify-content-cente">
      <thead>
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>
