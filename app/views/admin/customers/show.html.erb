<h2><%= @customer.last_name %>
  <%= @customer.first_name %>さんの会員詳細
</h2>

<div class="field">
  <label>会員ID</label>
  <%= @customer.id %>
</div>
<div class="field">
  <label>氏名</label>
  <%= @customer.last_name %>
  <%= @customer.first_name %>
</div>
<div class="field">
  <label>フリガナ</label>
  <%= @customer.last_name_kana %>
  <%= @customer.first_name_kana %>
</div>
<div class="field">
  <label>郵便局</label>
  <%= @customer.postal_code %>
</div>
<div class="field">
  <label>住所</label>
  <%= @customer.address %>
</div>
<div class="field">
  <label>電話番号</label>
  <%= @customer.telephone_number %>
</div>
<div class="field">
  <label>メールアドレス</label>
  <%= @customer.email %>
</div>
<div class="field">
  <label>会員ステータス</label>
<% if @customer.is_deleted == false %>
  <p>有効</p>
<% else %>
  <p>退会</p>
<% end %>
</div>

<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>

<%= link_to "注文履歴一覧を見る", admin_path %>

