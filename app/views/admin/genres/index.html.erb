<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url:'/admin/genres', method: :post do |f| %>
  <h4>ジャンル名</h4>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>