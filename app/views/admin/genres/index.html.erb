<div class="container">
  <div class="row m-4">
    <h4 class="bg-light col-lg-3 text-center">ジャンル一覧・追加</h4>
  </div>
  <div class="row">
    <%= form_with model: @genre, url:'/admin/genres', method: :post do |f| %>
      <table>
        <tr>
          <th class="col-lg-3">ジャンル名</th>
          <td class="col-lg-6"><%= f.text_field :name, placeholder: "ジャンル名", class: "col-lg-9 p-0" %></td>
          <td class="col-lg-4"><%= f.submit '新規登録', class: "btn btn-success btn-lg" %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-lg-4">
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th class="text-center">ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
