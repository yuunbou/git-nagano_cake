<div class="container">
  <div class="row m-4">
    <h4 class="bg-light col-lg-2 offset-1 text-center">ジャンル編集</h4>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <table>
          <tr>
            <th class="col-lg-3">ジャンル名</th>
            <td class="col-lg-6"><%= f.text_field :name, class: "col-lg-9" %></td>
            <td class="col-lg-4"><%= f.submit '変更を保存', class: "btn btn-success btn-lg" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>