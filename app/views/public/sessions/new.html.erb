<div class="container">
  <div class="row mx-auto">
    <h3 class="col-2 bg-light m-4">ログイン</h3>
  </div>

  <div class="row">
    <div class="col-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class=col-10>
          <p class="bg-light mx-auto">会員の方はこちらからログイン</p>
        </div>

        <div class="form-group col-lg-9 text-center">
          <%= f.label :email, "メールアドレス", class: "col-lg-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded col-5" %>
        </div>

        <div class="form-group col-lg-9 text-center">
          <%= f.label :password, "パスワード", class: "col-lg-3 control-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"rounded col-5" %>
        </div>
        <div class="form-group col-lg-9 text-center">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
      <p class="bg-light">会員登録がお済みでない方</p>
      <div class="col">
        <%= render "public/shared/links" %>
        <p>から新規登録を行なってください</p>
      </div>
    </div>
  </div>
</div>
