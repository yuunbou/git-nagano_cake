<div class="container">
  <div class="row mx-auto">
    <div class="col-lg-6">
      <h3 class="col-lg-4 bg-light m-4 text-center">ログイン</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p class=" col-lg-3 offset-1 bg-light text-center">会員の方はこちらからログイン</p>

        <div class="form-group col-lg-9 text-center">
          <%= f.label :email, "メールアドレス", class: "col-lg-3 control-label" %>
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class:"rounded col-5" %>
        </div>

        <div class="form-group col-lg-9 text-center">
          <%= f.label :password, "パスワード", class: "col-lg-3 control-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"rounded col-5" %>
        </div>
        <div class="col-lg-9 offset-4">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <p class="col-lg-3 offset-1 bg-light text-center">>会員登録がお済みでない方</p>
      <p class="col-lg-8 offset-1 mx-auto"><%= render "public/shared/links" %>から会員登録を行なってください</p>
    </div>
  </div>
</div>
