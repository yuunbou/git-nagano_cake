<div class="container">
  <div class="row m-3">
    <h4 class=" col-lg-2 bg-light text-center m-3">新規会員登録</h4>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group col-xs-9">
            <label class="name">名前</label>
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, placeholder: "令和", required: true, class: "rounded col-lg-3 mr-2" %>
            <%= f.label :first_name, "(名)", class: "mx-3" %>
            <%= f.text_field :first_name, placeholder: "道子", required: true, class: "rounded col-lg-3" %>
          </div>


          <div class="form-group col-xs-9">
            <label class="kana">フリガナ</label>
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, placeholder: "レイワ", required: true, class: "rounded col-lg-3 mr-2" %>
            <%= f.label :first_name_kana, "(メイ)", class: "ml-3" %>
            <%= f.text_field :first_name_kana, placeholder: "ミチコ", required: true, class: "rounded col-lg-3" %>
          </div>

          <div class="form-group col-xs-9">
            <%= f.label :email, "メールアドレス", class: "col-lg-3 control-label" %>
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "rounded col-lg-3" %>
          </div>

          <div class="form-group col-xs-9">
            <%= f.label :postal_code, "郵便番号", class: "col-lg-3 control-label" %>
            <%= f.text_field :postal_code, placeholder: "0000000", required: true, class: "rounded col-lg-3" %>
          </div>

          <div class="form-group col-xs-9">
            <%= f.label :address, "住所", class: "col-lg-3 control-label" %>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", required: true, class: "rounded col-lg-7" %>
          </div>

          <div class="form-group col-xs-9">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-lg-3 control-label" %>
            <%= f.text_field :telephone_number, placeholder: "00000000000", required: true, class: "rounded col-lg-3" %>
          </div>

        <div class="form-group col-xs-9">
          <%= f.label :password, "パスワード(６文字以上)", class: "col-lg-3 control-label" %>
          <% if @minimum_password_length %>

          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "rounded col-lg-3" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-lg-3 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded col-lg-3" %>
        </div>

        <div class="form-group">
          <div class="col-lg-3 offset-3">
            <%= f.submit "新規会員登録", class: "btn btn-success btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row m-3">
    <h4 class="col-lg-3 bg-light text-center m-3">既に登録済みの方</h4>
    <p class="col-lg-8 offset-1"><%= render "public/shared/links" %>からログインしてください</p>
  </div>
</div>


          <style>
            .name{
              width: 293px;
              padding: 0px 15px;
            }
            .kana{
              width: 276px;
              padding: 0px 15px;
            }
          </style>