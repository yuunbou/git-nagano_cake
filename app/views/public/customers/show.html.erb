<div class="container">
  <div class="row m-3 pl-3">
    <h4>マイページ</h4>
  </div>
  <div class="row">
    <div class="col-2 text-left">
      <label class="h3">登録情報</label>
    </div>
    <div class="col-2 text-left">
      <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">氏名</th>
            <td>
              <%= @customer.last_name + @customer.first_name %>
            </td>
          <tr>
            <th class="table-active">カナ</th>
            <td>
              <%= @customer.last_name_kana + @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <td>
               <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <th class="table-active">メールアドレス</th>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </tabel>
    </div>
  </div>
  
  <div class="row">
    <h2>配送先</h2>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
    <label>注文履歴</label>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>