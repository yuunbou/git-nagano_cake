<div class="container">
  <div class="row m-3">
    <h4>会員情報編集</h4>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

      <div class="col-10">
        <div class="form-group col-lg-9">
          <%= f.label :"氏名", class: "col-lg-3 control-label" %>
          <%= f.text_field :last_name, required: true, class:"rounded" %>
          <%= f.text_field :first_name, required: true, class:"rounded ml-5" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.label :"フリガナ", class: "col-lg-3 control-label" %>
          <%= f.text_field :last_name_kana, required: true, class:"rounded" %>
          <%= f.text_field :first_name_kana, required: true, class:"rounded ml-5" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.label :"郵便番号", class: "col-lg-3 control-label" %>
          <%= f.text_field :postal_code, required: true, class:"rounded" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.label :"住所", class: "col-lg-3 control-label" %>
          <%= f.text_field :address, required: true, class:"rounded col-lg-8 p-0" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.label :"電話番号", class: "col-lg-3 control-label" %>
          <%= f.text_field :telephone_number, required: true, class:"rounded" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.label :"メールアドレス", class: "col-lg-3 control-label" %>
          <%= f.text_field :email, required: true, class:"rounded" %>
        </div>

        <div class="form-group col-lg-9">
          <%= f.submit '編集内容を保存', class: "col-lg-3 offset-3 btn btn-success btn-sm btn-block" %>

          <%= link_to "退会する", customers_confirm_path, class: "col-lg-2 offset-3 btn btn-danger btn-sm" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



