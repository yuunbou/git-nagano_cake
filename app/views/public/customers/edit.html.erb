<h4>会員情報編集</h4>


<%= form_with model: @customer, url: customers_my_page_path, method: :patch do |f| %>
  <div class="field">
    <label>氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <%= f.submit '編集内容を保存', class: "btn btn-success btn-lg" %>

<% end %>