<div class="container">
  <div class="row m-4">
    <h4 class="col-lg-3 bg-light text-center">配送先登録/一覧</h4>
  </div>
  <div class="row mb-4">
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <div class="from-group col-xs-9">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-lg-3 control-label" %>
        <%= f.text_field :postal_code, placeholder: "0000000", required: true, class:"rounded" %>
      </div>
      <div class="from-group col-xs-9">
        <%= f.label :address, "住所", class: "col-lg-3 control-label" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", required: true, class:"rounded col-lg-5 p-0" %>
      </div>
      <div class="from-group col-xs-9 ">
        <%= f.label :name, "宛名", class: "col-lg-3 control-label" %>
        <%= f.text_field :name, placeholder: "令和道子", required: true, class:"rounded mr-5" %>
        <%= f.submit "新規登録", class: "col-lg-2 offset-3 btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered m-3">
        <thead>
          <tr class="bg-light">
            <th scope="col">郵便番号</th>
            <th scope="col">住所</th>
            <th scope="col">宛名</th>
            <th colspa></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td class="align-middle"><%= address.postal_code %></td>
            <td class="align-middle"><%= address.address %></td>
            <td class="align-middle"><%= address.name %></td>
            <td class="align-middle d-flex justify-content-center">
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %>
              <%= link_to "削除する", addresses_path(address.id), class: "btn btn-danger btn-sm ml-3", method: :delete, data: {confirm: "本当に消しますか？"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

