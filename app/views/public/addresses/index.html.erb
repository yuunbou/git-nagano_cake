<div class="container">
  <div class="row">
    <h3 class="bg-light">配送先登録/一覧</h3>
  </div>
  <div class="row">
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      <div class="from-group col-xs-9">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
        <%= f.text_field :postal_code, required: true, class:"rounded" %>
      </div>
      <div class="from-group col-xs-9">
        <%= f.label :address, "住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :address, required: true, class:"rounded col-5 p-0" %>
      </div>
      <div class="from-group col-xs-9 ">
        <%= f.label :name, "宛名", class: "col-sm-3 control-label" %>
        <%= f.text_field :name, required: true, class:"rounded" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table table-bordered m-3">
      <thead>
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to "削除する", addresses_path(address.id), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

