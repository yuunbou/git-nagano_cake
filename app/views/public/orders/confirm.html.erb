<div class="container">
    <div class="row mt-3">
        <div class="col-lg-2 ottset-1">
            <h4 class="bg-light text-center">注文情報確認</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7">
            <table class="table table-bordered">
                <thead>
                    <tr class="bg-light">
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    <% @sum = 0 %>
                    <% @cart_items.each do |cart_item| %>
                    <tr>
                        <td>
                            <%= image_tag cart_item.item.get_image(50,50) %>
                            <%= cart_item.item.name %>
                        </td>
                        <td><%= cart_item.item.with_tax_price %></td>
                        <td><%= cart_item.amount %></td>
                        <td><%= cart_item.subtotal %></td>
                        <% @sum += cart_item.subtotal %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="col-3">
        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">送料</th>
                        <td>
                            <%= @order.shipping_cost.to_s(:delimited) %>
                            <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
                        </td>
                    </tr>
                    <tr>
                        <th class="bg-light">商品合計</th>
                        <td><%= @sum.to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <th class="bg-light">請求金額</th>
                        <td>
                            <%= @order.total_payment = @sum + @order.shipping_cost %>
                            <% @order.total_payment %>
                            <%= f.hidden_field :total_payment, :value => @order.total_payment %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
            <table class="tabel tabel-borderless">
                <tr>
                    <th class="h4 col-lg-1">支払方法</th>
                    <td class="col-lg-3"><%= @order.payment_method_i18n %></td>
                    <%= f.hidden_field :payment_method, :value => @order.payment_method %></br>
                </tr>
                <tr>
                    <th class="h4 col-lg-1">お届け先</th>
                    <td class="col-lg-6">
                        〒<%= @order.postal_code %>
                        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
                        <%= @order.address %>
                        <%= f.hidden_field :address, :value => @order.address %></br>
                        <%= @order.name %>
                        <%= f.hidden_field :name, :value => @order.name %>
                    </td>
                </tr>
            </table>

    </div>
    <div class="text-center">
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
        <% end %>
</div>

